            "body": { "mode": "raw", "raw": "{\n  \"rating\": 4,\n  \"comment\": \"Updated review comment\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/reviews/{{reviewId}}",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", "{{reviewId}}"]
            }
          }
        },
        {
          "name": "Delete Review (Admin)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/reviews/{{reviewId}}",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", "{{reviewId}}"]
            }
          }
        },
        {
          "name": "Create Review (No Auth) - Should Fail",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"author\": \"Anonymous\",\n  \"rating\": 5,\n  \"comment\": \"This should fail without authentication\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}", "reviews"]
            }
          }
